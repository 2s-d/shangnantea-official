{
  "kind": "collectionType",
  "collectionName": "tea_products",
  "info": {
    "singularName": "tea-product",
    "pluralName": "tea-products",
    "displayName": "Tea Product",
    "description": "Tea products for display"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 200
    },
    "description": {
      "type": "richtext"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "category": {
      "type": "string"
    },
    "origin": {
      "type": "string"
    },
    "features": {
      "type": "json"
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}
